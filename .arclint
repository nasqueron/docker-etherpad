{
    "linters": {
        "chmod": {
            "type": "chmod"
        },
        "shell": {
            "type": "shellcheck",
            "include": [
                "(\\.sh$)"
            ]
        },
        "filename": {
            "type": "filename"
        },
        "json": {
            "type": "json",
            "include": [
                "(^\\.arcconfig$)",
                "(^\\.arclint$)",
                "(\\.json$)"
            ]
        }
    }
}
